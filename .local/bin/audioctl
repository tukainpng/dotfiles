#!/bin/sh

up() {
  VOLUME=$(amixer set Master 5%+ | grep % | head -n1 | awk '{print $4}')
}

down() {
  VOLUME=$(amixer set Master 5%- | grep % | head -n1 | awk '{print $4}')
}

toggle() {
  VOLUME=$(amixer set Master toggle | grep % | head -n1 | awk '{print $6}')
}

case "$1" in
  "up") up;;
  "down") down;;
  "toggle") toggle;;
esac

makoctl dismiss -a && notify-send "Volume est√° em $VOLUME"
