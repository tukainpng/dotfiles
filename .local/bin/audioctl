#!/bin/sh

up() {
  VOLUME=$(amixer set Master 5%+ | grep % | head -n1 | awk '{print $4}')
  makoctl dismiss -a && notify-send "Volume est치 em $VOLUME"
}

down() {
  VOLUME=$(amixer set Master 5%- | grep % | head -n1 | awk '{print $4}')
  makoctl dismiss -a && notify-send "Volume est치 em $VOLUME"
}

toggle() {
  VOLUME=$(amixer set Master toggle | grep % | head -n1 | awk '{print $6}')
  makoctl dismiss -a && notify-send "O 치udio est치 $VOLUME"
}

case "$1" in
  "up") up;;
  "down") down;;
  "toggle") toggle;;
esac
